<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>FortunePortlet</display-name>

    <description>Automated generated Application Wrapper</description>

    <servlet>
        <servlet-name>example-portlet-jsp</servlet-name>
        <display-name>example-portlet-jsp Portlet</display-name>
        <description>Generated Portlet Wrapper</description>
        <servlet-class>org.apache.pluto.core.PortletServlet</servlet-class>

        <init-param>
            <param-name>portlet-class</param-name>
            <param-value>org.exoplatform.portal.example.MyPortlet</param-value>
        </init-param>

        <init-param>
            <param-name>portlet-guid</param-name>
            <param-value>yourportlet.example-portlet-jsp</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>example-portlet-jsp</servlet-name>
        <url-pattern>/example-portlet-jsp/*</url-pattern>
    </servlet-mapping>

</web-app>
